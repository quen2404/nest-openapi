{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "include": ["lib/**/*", "generated/**/*"],
  "exclude": ["node_modules", "**/*.(spec|test).ts"]
}
